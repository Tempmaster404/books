<h3 class="text-center"><%= @category.title %></h3>
<% if @books.present? %>
  <% @books.each do |book| %>
    <div class="text-center"> 
      <%= image_tag book.cover.image.url, class: 'img img-thumbnail' %>
      <br>
      <%= link_to book.title, book %>
    </div>
  <% end %>
<% else %>
  <h5 class="text-center">Sorry, there is no books yet :(</h5>
<% end %>
